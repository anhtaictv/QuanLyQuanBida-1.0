<Window x:Class="QuanLyQuanBida.UI.Views.InventoryManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyQuanBida.UI.Views"
        mc:Ignorable="d"
        Title="Quản lý Tồn kho" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Padding="10" BorderThickness="1" BorderBrush="LightGray" Margin="0,0,10,0">
            <StackPanel DataContext="{Binding AdjustmentForm}">
                <TextBlock Text="Điều chỉnh Tồn kho" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <Label Content="Chọn sản phẩm:"/>
                <ComboBox ItemsSource="{Binding DataContext.TrackedProducts, RelativeSource={RelativeSource AncestorType=Window}}"
                          SelectedValue="{Binding ProductId}"
                          SelectedValuePath="Id"
                          DisplayMemberPath="Name"
                          Height="25" Margin="0,0,0,10"/>

                <Label Content="Loại giao dịch:"/>
                <ComboBox ItemsSource="{Binding DataContext.TransactionTypes, RelativeSource={RelativeSource AncestorType=Window}}"
                          SelectedItem="{Binding TransactionType}"
                          Height="25" Margin="0,0,0,10"/>

                <Label Content="Số lượng:"/>
                <TextBox Text="{Binding Quantity}" Height="25" Margin="0,0,0,10"/>

                <Label Content="Ghi chú (Phiếu nhập/xuất):"/>
                <TextBox Text="{Binding Reference}" Height="50" Margin="0,0,0,20"/>

                <Button Content="XÁC NHẬN" Height="35" 
                        Command="{Binding DataContext.AdjustStockCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Tồn kho hiện tại" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <DataGrid Grid.Row="1" ItemsSource="{Binding TrackedProducts}"
                      AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Đơn vị" Binding="{Binding Unit}" Width="80"/>
                    <DataGridTextColumn Header="Tồn kho" Binding="{Binding Quantity}" Width="80" FontWeight="Bold"/>
                    <DataGridTextColumn Header="Danh mục" Binding="{Binding Category}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>