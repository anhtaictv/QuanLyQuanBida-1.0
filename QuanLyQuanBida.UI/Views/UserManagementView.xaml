<Window x:Class="QuanLyQuanBida.UI.Views.UserManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyQuanBida.UI.Views"
        xmlns:viewmodels="clr-namespace:QuanLyQuanBida.UI.ViewModels"
        mc:Ignorable="d"
        Title="Quản lý Người dùng" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Form tạo/sửa user -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Thông tin người dùng" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <Label Content="ID:" Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <TextBox x:Name="IdTextBox" Height="25" Margin="0,0,0,10" 
                     IsReadOnly="True" Text="{Binding SelectedUser.Id}"
                     Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Label Content="Tên đăng nhập:"/>
            <TextBox x:Name="UsernameTextBox" Height="25" Margin="0,0,0,10" 
                     Text="{Binding UserForm.Username}"/>

            <Label Content="Mật khẩu:"/>
            <PasswordBox x:Name="PasswordBox" Height="25" Margin="0,0,0,10" 
                         PasswordChanged="PasswordBox_PasswordChanged"/>

            <Label Content="Họ và tên:"/>
            <TextBox x:Name="FullNameTextBox" Height="25" Margin="0,0,0,10" 
                     Text="{Binding UserForm.FullName}"/>

            <Label Content="Số điện thoại:"/>
            <TextBox x:Name="PhoneTextBox" Height="25" Margin="0,0,0,10" 
                     Text="{Binding UserForm.Phone}"/>

            <Label Content="Vai trò:"/>
            <ComboBox x:Name="RoleComboBox" Height="25" DisplayMemberPath="Name" 
                      SelectedValuePath="Id" SelectedValue="{Binding UserForm.RoleId}"
                      ItemsSource="{Binding Roles}" Margin="0,0,0,10"/>

            <CheckBox Content="Hoạt động" IsChecked="{Binding UserForm.IsActive}" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="Lưu" Width="80" Margin="0,0,5,0" Command="{Binding SaveUserCommand}"/>
                <Button Content="Hủy" Width="80" Command="{Binding CancelCommand}"/>
            </StackPanel>
        </StackPanel>

        <!-- Danh sách user -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Width="200" Height="25" Text="{Binding SearchText}" 
                         Margin="0,0,10,0"/>
                <Button Content="Tìm kiếm" Width="80" Command="{Binding SearchCommand}"/>
                <Button Content="Thêm mới" Width="80" Margin="10,0,0,0" Command="{Binding AddNewCommand}"/>
            </StackPanel>

            <DataGrid Grid.Row="1" x:Name="UsersDataGrid" AutoGenerateColumns="False" 
                      IsReadOnly="True" SelectedItem="{Binding SelectedUser}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Tên đăng nhập" Binding="{Binding Username}" Width="120"/>
                    <DataGridTextColumn Header="Họ và tên" Binding="{Binding FullName}" Width="150"/>
                    <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" Width="100"/>
                    <DataGridTextColumn Header="Vai trò" Binding="{Binding Role.Name}" Width="100"/>
                    <DataGridCheckBoxColumn Header="Hoạt động" Binding="{Binding IsActive}" Width="80"/>
                    <DataGridTemplateColumn Header="Thao tác" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Sửa" Width="50" Margin="0,0,5,0" 
                                            Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="Xóa" Width="50" 
                                            Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>