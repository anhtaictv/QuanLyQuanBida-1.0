<Window x:Class="QuanLyQuanBida.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyQuanBida.UI"
        xmlns:controls="clr-namespace:QuanLyQuanBida.UI.Views.Controls"
        xmlns:converters="clr-namespace:QuanLyQuanBida.UI.Converters"
        xmlns:viewmodels="clr-namespace:QuanLyQuanBida.UI.ViewModels"
        xmlns:entities="clr-namespace:QuanLyQuanBida.Core.Entities;assembly=QuanLyQuanBida.Core"
        mc:Ignorable="d"
        Title="Quản lý Quán Bida" Height="720" Width="1280"
        WindowState="Maximized">

    <Window.Resources>
        <converters:TableStatusToBrushConverter x:Key="StatusToBrushConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:TableNameZoneConverter x:Key="TableNameZoneConverter"/>

        <Style x:Key="TableCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{Binding Status, Converter={StaticResource StatusToBrushConverter}}"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Color="#AAAAAA" Opacity="0.3" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="GroupHeaderTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#333"
                           Margin="10,15,0,5"/>
                <Border BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Margin="5,0,5,5"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="PosGroupHeaderTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="DarkBlue"
                           Margin="5,10,0,5"/>
            </StackPanel>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="LightGray">
            <MenuItem Header="Hệ thống">
                <MenuItem Header="Mở/Đóng Ca" Command="{Binding ShowShiftManagementCommand}"/>
                <Separator/>
                <MenuItem Header="Đăng xuất" Command="{Binding LogoutCommand}"/>
                <MenuItem Header="Thoát" Command="{Binding ExitCommand}"/>
            </MenuItem>
            
            <MenuItem Header="Quản lý" Visibility="{Binding CanManageUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                <MenuItem Header="Quản lý Bàn" Command="{Binding ShowTableManagementCommand}"
                          Visibility="{Binding CanManageProducts, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <MenuItem Header="Người dùng" Command="{Binding ShowUserManagementCommand}"
                          Visibility="{Binding CanManageUsers, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <MenuItem Header="Sản phẩm" Command="{Binding ShowProductManagementCommand}"
                          Visibility="{Binding CanManageProducts, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <MenuItem Header="Khách hàng" Command="{Binding ShowCustomerManagementCommand}"
                          Visibility="{Binding CanManageCustomers, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <MenuItem Header="Nhập hàng" Command="{Binding ShowAddStockWindowCommand}"
                          Visibility="{Binding CanManageInventory, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <MenuItem Header="Tồn kho" Command="{Binding ShowInventoryManagementCommand}"
                          Visibility="{Binding CanManageInventory, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </MenuItem>
            
            <MenuItem Header="Báo cáo" Visibility="{Binding CanViewReports, Converter={StaticResource BooleanToVisibilityConverter}}">
                <MenuItem Header="Xem báo cáo" Command="{Binding ShowReportsCommand}"/>
            </MenuItem>
            
            <MenuItem Header="Cài đặt" Visibility="{Binding CanManageSettings, Converter={StaticResource BooleanToVisibilityConverter}}">
                <MenuItem Header="Giá giờ" Command="{Binding ShowRateSettingsCommand}"
                          Visibility="{Binding CanManageRates, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <MenuItem Header="Sao lưu và Phục hồi" Command="{Binding ShowBackupWindowCommand}"/>
                <MenuItem Header="Chủ đề">
                    <MenuItem Header="Sáng" Command="{Binding SetLightThemeCommand}"/>
                    <MenuItem Header="Tối" Command="{Binding SetDarkThemeCommand}"/>
                </MenuItem>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="SƠ ĐỒ BÀN" FontSize="16" FontWeight="Bold" Margin="10,5"/>

                <TabControl Grid.Row="1" ItemsSource="{Binding TablesView.Groups}" Margin="5">

                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" Margin="5"/>
                        </DataTemplate>
                    </TabControl.ItemTemplate>

                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Items}">

                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="5"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type viewmodels:TableViewModel}">
                                            <Border Style="{StaticResource TableCardStyle}">
                                                <Border.InputBindings>
                                                    <MouseBinding Gesture="LeftClick" 
                                                                  Command="{Binding DataContext.SelectTableCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                  CommandParameter="{Binding}"/>
                                                </Border.InputBindings>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8,5,8,0">
                                                        <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" 
                                                              Fill="White" Stroke="Black" StrokeThickness="0.5" Width="12" Height="12" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Row="1" Text="{Binding ElapsedTime}" 
                                                               FontSize="20" FontWeight="Bold" 
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                                               Visibility="{Binding IsSessionActive, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                    <TextBlock Grid.Row="2" Text="{Binding Status}" 
                                                               FontSize="12" Margin="8" 
                                                               HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                               FontWeight="SemiBold"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <Grid Grid.Column="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="CHI TIẾT PHIÊN" FontSize="16" FontWeight="Bold" Margin="5"/>

                <Grid Grid.Row="1" Visibility="{Binding SelectedTable, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel Margin="5">

                        <TextBlock FontSize="18" FontWeight="Bold">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource TableNameZoneConverter}">
                                    <Binding Path="SelectedTable.Name"/>
                                    <Binding Path="SelectedTable.Zone"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>

                        <TextBlock Text="{Binding CurrentSession.StartAt, StringFormat='Bắt đầu: {0:HH:mm:ss}'}" 
                                   Visibility="{Binding IsSessionActive, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Button Content="Mở Phiên" Width="80" Margin="2" 
                                    Command="{Binding StartSessionCommand}"/>

                            <Button Content="{Binding PauseButtonText}" Width="80" Margin="2" 
                                    Command="{Binding PauseSessionCommand}"/>

                            <Button Content="Chuyển Bàn" Width="80" Margin="2" 
                                    Command="{Binding ShowMoveTableCommand}"/>

                            <Button Content="Thanh toán" Width="80" Margin="2" Background="Green"
                                    Command="{Binding CloseSessionCommand}"/>
                        </StackPanel>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <Label Content="Khách hàng:" Padding="0" Margin="0,0,0,2"/>
                                <ComboBox ItemsSource="{Binding AvailableCustomers}"
                                          SelectedItem="{Binding SelectedCustomerForSession}"
                                          DisplayMemberPath="Name"
                                          Height="25"/>
                            </StackPanel>

                            <Button Grid.Column="1" Content="Gán" Width="50" Margin="5,0,0,0" 
                                    Command="{Binding AssignCustomerToSessionCommand}"
                                    VerticalAlignment="Bottom"/>
                        </Grid>
                        <TextBlock Text="Danh sách Order:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <DataGrid ItemsSource="{Binding CurrentSessionOrders}" 
                                  AutoGenerateColumns="False" IsReadOnly="True" MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tên" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="SL" Binding="{Binding Quantity}" Width="Auto"/>
                                <DataGridTextColumn Header="Giá" Binding="{Binding Price, StringFormat='N0'}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>

                <TextBlock Grid.Row="2" Text="GỌI MÓN (POS)" FontSize="16" FontWeight="Bold" Margin="5"/>

                <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ProductsView}">

                        <ItemsControl.GroupStyle>
                            <GroupStyle HeaderTemplate="{StaticResource PosGroupHeaderTemplate}">
                                <GroupStyle.Panel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </GroupStyle.Panel>
                            </GroupStyle>
                        </ItemsControl.GroupStyle>

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type entities:Product}">
                                <Button Height="60" Width="80" Margin="3" 
                                        Command="{Binding DataContext.AddOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" TextWrapping="Wrap" TextAlignment="Center"/>
                                        <TextBlock Text="{Binding Price, StringFormat='N0'}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>

        <StatusBar Grid.Row="2" Background="LightGray">
            <StatusBarItem>
                <TextBlock Text="{Binding CurrentUser.FullName, StringFormat='NV: {0}'}" Margin="10,0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding CurrentTime}" Margin="10,0"/>
            </StatusBarItem>
        </StatusBar>

        <controls:LoadingIndicator Grid.Row="0" Grid.RowSpan="3" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</Window>