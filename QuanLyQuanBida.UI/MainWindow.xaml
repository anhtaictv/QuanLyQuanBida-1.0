<Window x:Class="QuanLyQuanBida.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Quán Bida" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Bên trái: Danh sách bàn -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Tables}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="15" CornerRadius="10" Background="LightGray"
                                Cursor="Hand" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Code}" FontSize="14"/>
                                <TextBlock Text="{Binding Status}" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray"/>

        <!-- Bên phải: Chi tiết bàn -->
        <Grid Grid.Column="2" Background="#F0F0F0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Thông tin bàn -->
            <StackPanel Grid.Row="0" Margin="10">
                <TextBlock Text="{Binding SelectedTable.Name}" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedTable.Status}" FontSize="14"/>
                <Button Content="Bắt đầu chơi" Command="{Binding StartSessionCommand}" Margin="0,10,0,0" Padding="10,5"/>
            </StackPanel>

            <!-- Danh sách sản phẩm -->
            <ScrollViewer Grid.Row="1" Margin="10">
                <ItemsControl ItemsSource="{Binding Products}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" Margin="2" Padding="5" CornerRadius="5" Cursor="Hand">
                                <TextBlock Text="{Binding Name}" />
                                <Border.InputBindings>
                                    <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.AddOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Tiêu đề danh sách gọi món -->
            <TextBlock Grid.Row="2" Text="Các món đã gọi" FontWeight="Bold" Margin="10,5"/>

            <!-- Danh sách các món đã gọi -->
            <DataGrid Grid.Row="3" Margin="10" ItemsSource="{Binding CurrentSessionOrders}" AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên món" Binding="{Binding Product.Name}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Đơn giá" Binding="{Binding Price, StringFormat=N0}" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>